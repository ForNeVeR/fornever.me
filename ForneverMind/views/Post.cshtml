@using RazorEngine.Templating
@inherits TemplateBase<ForneverMind.Models.PostModel>

@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = Model.Meta.Title;
}

<div class="info">
    Дата публикации: @Model.Meta.Date.ToString("yyyy.MM.dd")
</div>

@Raw(Model.HtmlContent)

<div id="disqus_thread"></div>

@section scripts {
    <script>
        window.disqus_config = function () {
            this.page.url = window.location.toString();
            this.page.identifier = '@Model.Meta.CommentThreadId';
        };
    </script>
    <script src="//fornever.disqus.com/embed.js"></script>
}
